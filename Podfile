# platform :ios, '9.0'

target 'Alloy' do
  # Comment this line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for Alloy
  pod ‘Firebase/Core’
  pod ‘Firebase/Database’
  pod ‘Firebase/Auth’
  pod ‘Firebase/Storage’


  target 'AlloyTests' do
    inherit! :search_paths
    # Pods for testing
  end

  target 'AlloyUITests' do
    inherit! :search_paths
    # Pods for testing
  end

end
